@using MySensive.EntityLayer.Entities
@model List<Comment>
@{
    ViewData["Title"] = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>Yorumlarınız</h2>
            </div>
        </div>
        <div class="full progress_bar_inner">
            <div class="row">
                <div class="col-md-12">
                    <div class="msg_list_main">
                        <ul class="msg_list">
                            @foreach (var item in Model)
                            {
                                <li class="comment-item">
                                    <div class="comment-content">
                                        <span class="name_user d-block font-weight-bold">@item.Article.Title</span>
                                        <span class="msg_user d-block">@item.Detail</span>
                                    </div>
                                    <div class="time-column text-muted">
                                        @item.CreatedDate.ToString("dd-MMM-yyyy")
                                    </div>
                                    <div class="btn-group">
                                        <a href="/Author/Comment/DeleteComment/@item.CommentId" class="btn cur-p btn-outline-danger btn-md">Sil</a>
                                        <a href="/Author/Comment/EditComment/@item.CommentId" class="btn cur-p btn-outline-dark btn-md">Güncelle</a>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

